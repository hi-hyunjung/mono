{
  "extends": "@config/tsconfig/vite.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",

    "baseUrl": ".",

    "paths": {
      "app/*": ["./src/app/*"],
      "components/*": ["./src/components/*"],
      "hooks/*": ["./src/hooks/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
