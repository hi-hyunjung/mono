{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "vite-end.d.ts",
        "!.vite/**",
        ".next/**",
        "next-env.d.ts",
        "!.next/cache/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "fe#dev": {
      "dependsOn": ["fe#lint", "^lint"],
      "cache": false,
      "persistent": true
    },
    "api#dev": {
      "dependsOn": ["api#lint", "^lint", "@ufb/shared#build"],
      "cache": false,
      "persistent": true
    },
    "web#dev": {
      "dependsOn": ["web#lint", "^lint", "@ufb/shared#build"],
      "cache": false,
      "persistent": true
    },
    "@ufb/shared#build": {
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "fe#lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "api#lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "web#lint": {
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "test": {}
  },
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "NODE_ENV",
    "SESSION_PASSWORD",
    "NEXT_PUBLIC_API_BASE_URL",
    "APP_PORT",
    "BASE_URL",
    "NEXT_PUBLIC_MAX_DAYS",
    "SKIP_ENV_VALIDATION",
    "PORT"
  ],
  "globalPassThroughEnv": ["NODE_ENV"]
}
